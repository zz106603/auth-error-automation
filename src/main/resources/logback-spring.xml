<configuration>

    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="auth-error-automation"/>
    <springProperty scope="context" name="APP_ENV" source="spring.profiles.active" defaultValue="local"/>

    <!-- JSON stdout -->
    <appender name="JSON_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"${APP_NAME}","env":"${APP_ENV}"}</customFields>
            <includeMdc>true</includeMdc>
        </encoder>
    </appender>

    <!-- JSON file (로컬 filebeat가 tail) -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./logs/auth-error-events.json</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./logs/auth-error-events.%d{yyyy-MM-dd}.json</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"${APP_NAME}","env":"${APP_ENV}"}</customFields>
            <includeMdc>true</includeMdc>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="JSON_STDOUT"/>
        <appender-ref ref="JSON_FILE"/>
    </root>

</configuration>
